<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Spinner
        android:id="@+id/batchspin"
        android:layout_width="92dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"></Spinner>

    <EditText
        android:id="@+id/enroll"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:hint="Enrollment"
        android:inputType="number"
        android:maxLength="12"
        android:visibility="gone" />

    <EditText
        android:id="@+id/name"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/submitbtn"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-72dp"
        android:hint="Name"
        android:visibility="gone" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="+"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:id="@+id/add"/>

    <ExpandableListView
        android:id="@+id/expanded_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true">

    </ExpandableListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:id="@+id/submitbtn"
        android:clickable="true"
        android:text="Mark Attendance"
        android:textColor="#FFFFFF"
        android:background="@color/DarkBlueViolet"
        android:padding="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addstd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/submitbtn"
        android:layout_marginEnd="23dp"
        android:clickable="true"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        app:rippleColor="@color/colorPrimaryDark" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="25dp"
        android:visibility="gone"
        android:id="@+id/deletestd"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/submitbtn"
        android:id="@+id/pb"
        android:visibility="gone"
        android:layout_marginStart="36dp" />
</RelativeLayout>