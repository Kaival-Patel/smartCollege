<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".NotificationSetting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updates Notifications"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/update_notif"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance Fill Reminder"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:id="@+id/attendancerem_notif"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marks Fill Reminder"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:id="@+id/marksrem_notif"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/notification"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="90dp"/>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9758630723010439/7855444453" />
    </LinearLayout>

</ScrollView>