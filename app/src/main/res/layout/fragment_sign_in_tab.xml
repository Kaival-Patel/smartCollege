<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sign_in_tab"
    android:id="@+id/sclayout"
    android:background="@drawable/bg_animation_1"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="25dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:hint="Enter Your Email-ID"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#98a6bc"
            android:inputType="textEmailAddress"
            android:textColor="#E73355"
            android:layout_marginBottom="40dp"
            android:background="@drawable/white_rectangle"/>
        <EditText
            android:id="@+id/enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:hint="Enter Your Enrollment-ID"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#98a6bc"
            android:inputType="number"
            android:textColor="#E73355"
            android:maxLength="12"
            android:layout_marginBottom="40dp"
            android:background="@drawable/white_rectangle"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleDrawable="@drawable/visibleornotvisible"
            app:passwordToggleTint="#E73355"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            >
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="40dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:hint="Enter Your Password"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColorHint="#98a6bc"
                android:inputType="textPassword"
                android:textColor="#E73355"
                android:background="@drawable/white_rectangle"/>
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Remember Me"
            android:id="@+id/rememberme"
            android:textColor="@color/Orange"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/signinbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E73355"
            android:text="Sign In"
            android:textColor="@color/whiteTextcolor" />

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Forget Password?"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#f7ce1b"
            android:id="@+id/forget"
            />
    </LinearLayout>


</ScrollView>