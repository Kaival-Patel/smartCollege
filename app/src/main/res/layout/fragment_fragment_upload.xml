<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_upload"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem:"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                />
            <Spinner
                android:layout_width="200dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_sem">

            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Type"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                />
            <Spinner
                android:layout_width="200dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_type">

            </Spinner>

        </LinearLayout>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter Enrollment Number"
            android:padding="5dp"
            android:background="@drawable/white_rectangle"
            android:textSize="25dp"
            android:inputType="number"
            android:id="@+id/enrollment"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Attendance %"
            android:layout_marginLeft="100dp"
            android:id="@+id/attendance"
            android:inputType="number"
            android:maxLength="2"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Marks:"
            android:layout_marginLeft="30dp"
            android:textSize="30dp"
            android:id="@+id/entermarks"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:hint="Enter SP marks"
            android:background="@drawable/white_rectangle"
            android:textSize="20dp"
            android:id="@+id/spmarks"
            android:inputType="number"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter OOPJ marks"
            android:padding="5dp"
            android:id="@+id/oopjmarks"
            android:background="@drawable/white_rectangle"
            android:textSize="20dp"
            android:inputType="number"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:hint="Enter CG marks"
            android:background="@drawable/white_rectangle"
            android:textSize="20dp"
            android:id="@+id/cgmarks"
            android:inputType="number"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:hint="Enter ADA marks"
            android:padding="5dp"
            android:background="@drawable/white_rectangle"
            android:textSize="20dp"
            android:id="@+id/adamarks"
            android:inputType="number"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:text="Update"
                android:background="@drawable/rounded_edges"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:id="@+id/update_btn"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/pb"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>



</ScrollView>






</LinearLayout>